@model Final_Project.Models.Reservation

@{
    ViewBag.Title = "Reservation Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-info-circle"></i> Reservation Details
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted">Customer</label>
                                <div class="detail-value">
                                    <i class="bi bi-person me-2"></i>
                                    @Html.DisplayFor(model => model.Customer.Name)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted">Table</label>
                                <div class="detail-value">
                                    <i class="bi bi-grid me-2"></i>
                                    Table @Html.DisplayFor(model => model.Table.Number)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted">Reservation Time</label>
                                <div class="detail-value">
                                    <i class="bi bi-clock me-2"></i>
                                    @Model.ReservationTime.ToString("MMM dd, yyyy hh:mm tt")
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted">Status</label>
                                <div class="detail-value">
                                    @{
                                        var statusClass = "secondary";
                                        var statusIcon = "question-circle";

                                        if (Model.Status?.ToLower() == "confirmed")
                                        {
                                            statusClass = "success";
                                            statusIcon = "check-circle";
                                        }
                                        else if (Model.Status?.ToLower() == "pending")
                                        {
                                            statusClass = "warning";
                                            statusIcon = "hourglass";
                                        }
                                        else if (Model.Status?.ToLower() == "cancelled")
                                        {
                                            statusClass = "danger";
                                            statusIcon = "x-circle";
                                        }
                                        else if (Model.Status?.ToLower() == "completed")
                                        {
                                            statusClass = "info";
                                            statusIcon = "check-square";
                                        }
                                    }
                                    <span class="badge bg-@statusClass">
                                        <i class="bi bi-@statusIcon me-1"></i>
                                        @Html.DisplayFor(model => model.Status)
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="text-center">
                        <a href="@Url.Action("Edit", new { id = Model.ReservationId })" class="btn btn-primary me-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        border: none;
    }

    .card-header {
        border-bottom: 1px solid #dee2e6;
        padding: 1.5rem;
    }

    .card-body {
        padding: 2rem;
    }

    .detail-group {
        margin-bottom: 1rem;
    }

        .detail-group label {
            display: block;
            font-size: 0.875rem;
            margin-bottom: 0.5rem;
        }

    .detail-value {
        font-size: 1.1rem;
        color: #333;
    }

    .badge {
        padding: 0.5em 0.8em;
        font-size: 0.9em;
    }

    .btn {
        padding: 8px 20px;
        margin: 0 5px;
    }

    .bi {
        font-size: 1.1rem;
    }

    hr {
        opacity: 0.15;
    }
</style>