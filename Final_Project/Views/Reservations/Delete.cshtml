@model Final_Project.Models.Reservation

@{
    ViewBag.Title = "Delete Reservation";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Confirm Deletion
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle"></i>
                        Are you sure you want to delete this reservation?
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted">Customer</label>
                                <div class="detail-value">
                                    <i class="bi bi-person me-2"></i>
                                    @Html.DisplayFor(model => model.Customer.Name)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted">Table</label>
                                <div class="detail-value">
                                    <i class="bi bi-grid me-2"></i>
                                    Table @Html.DisplayFor(model => model.Table.Number)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted">Reservation Time</label>
                                <div class="detail-value">
                                    <i class="bi bi-clock me-2"></i>
                                    @Model.ReservationTime.ToString("MMM dd, yyyy hh:mm tt")
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-group">
                                <label class="text-muted">Status</label>
                                <div class="detail-value">
                                    @{
                                        string statusClass;

                                        if (Model.Status?.ToLower() == "confirmed")
                                        {
                                            statusClass = "success";
                                        }
                                        else if (Model.Status?.ToLower() == "pending")
                                        {
                                            statusClass = "warning";
                                        }
                                        else if (Model.Status?.ToLower() == "cancelled")
                                        {
                                            statusClass = "danger";
                                        }
                                        else if (Model.Status?.ToLower() == "completed")
                                        {
                                            statusClass = "info";
                                        }
                                        else
                                        {
                                            statusClass = "secondary";
                                        }
                                    }
                                    <span class="badge bg-@statusClass">
                                        <i class="bi bi-circle-fill me-1"></i>
                                        @Html.DisplayFor(model => model.Status)
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        border: none;
    }

    .card-header {
        border-bottom: 1px solid #dee2e6;
        padding: 1.5rem;
    }

    .card-body {
        padding: 2rem;
    }

    .detail-group {
        margin-bottom: 1rem;
    }

        .detail-group label {
            display: block;
            font-size: 0.875rem;
            margin-bottom: 0.5rem;
        }

    .detail-value {
        font-size: 1.1rem;
        color: #333;
    }

    .badge {
        padding: 0.5em 0.8em;
        font-size: 0.9em;
    }

    .btn {
        padding: 8px 20px;
        margin: 0 5px;
    }

    .alert {
        border-radius: 8px;
        font-size: 1.1rem;
    }

    .bi {
        font-size: 1.1rem;
    }
</style>