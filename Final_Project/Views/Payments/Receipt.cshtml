@model Final_Project.Models.Payment

<div class="receipt-container">
    <div class="receipt-header">
        <h1>Payment Receipt</h1>
        <p>Receipt #@Model.PaymentId</p>
        <p>@Model.PaymentTime.ToString()</p>
    </div>

    <div class="section">
        <h2>Customer Information</h2>
        <p>Name: @Model.Order.Customer.Name</p>
    </div>

    <div class="section">
        <h2>Order Items</h2>
        <table>
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Order.OrderItems)
                {
                    <tr>
                        <td>@item.MenuItem.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@((item.Quantity * item.Price).ToString("C"))</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3">Total Amount:</td>
                    <td>@Model.Amount.ToString("C")</td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="section">
        <h2>Payment Information</h2>
        <p>Method: @Model.PaymentMethod</p>
        <p>Payment Time: @Model.PaymentTime.ToString()</p>
    </div>
</div>

<style>
    .receipt-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 20px;
        font-family: Arial, sans-serif;
        color: #333;
    }

    .receipt-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .receipt-header h1 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .receipt-header p {
        margin: 5px 0;
        color: #666;
    }

    .section {
        margin-bottom: 30px;
    }

    h2 {
        font-size: 18px;
        border-bottom: 2px solid #ffd700;
        padding-bottom: 5px;
        margin-bottom: 15px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin: 10px 0;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    tfoot td {
        font-weight: bold;
        border-top: 2px solid #ddd;
    }

    @@media print {
        body * {
            visibility: hidden;
        }

        .receipt-container, .receipt-container * {
            visibility: visible;
        }

        .receipt-container {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            margin: 0;
            padding: 20px;
        }

        @@page {
            margin: 2cm;
            size: auto;
        }
    }
</style>